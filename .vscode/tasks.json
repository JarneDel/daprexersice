{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-lego",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LegoService/LegoService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/LegoService/LegoService.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/LegoService/LegoService.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "LegoServiceDapr",
            "appPort": 5001,
            "httpPort": 5010,
            "grpcPort": 60001,
            "componentsPath": "./components",
            "label": "dapr-debug-lego",
            "type": "dapr"
        },
        {
            "appId": "LegoServiceDapr",
            "label": "daprd-down-lego",
            "type": "daprd-down"
        }
    ]
}